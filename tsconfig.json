{
  "extends": "@nurdiansyah/devel/tsconfig.svelte.json",
  "compilerOptions": {
    "composite": false,
    "lib": ["DOM", "ES2019"],
    "jsx": "preserve",
    "importsNotUsedAsValues": "error"
  },
  "include": ["types", "packages"],
  "exclude": [
    "node_modules/*",
    "**/public/*",
    "**/node_modules",
    "**/__types__",
    "**/__mocks__"
  ]
}
