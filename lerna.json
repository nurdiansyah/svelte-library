{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["master", "feat/*", "bug/*", "tag/*", "sup/*", "rel/*"],
      "exact": true,
      "gitRemote": "upstream"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.md"
  ]
}
